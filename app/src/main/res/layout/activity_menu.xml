<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/back"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniellegomes.mosquito.MenuActivity"
    android:weightSum="1"
    android:baselineAligned="false"
    android:orientation="vertical">

    <Button
        android:id="@+id/button1"
        android:layout_width="231dp"
        android:layout_height="79dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/botao"
        android:onClick="ListaDoencas"
        android:text="Doenças"
        android:textColor="@color/colorAzulEscuro"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="231dp"
        android:layout_height="79dp"
        android:text="Prevenção"
        android:textColor="@color/colorAzulEscuro"
        android:textStyle="bold"
        android:background="@drawable/botao"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:onClick="Prevencao"
     />

    <Button
        android:id="@+id/button3"
        android:layout_width="231dp"
        android:layout_height="79dp"
        android:text="Local de Risco"

        android:textColor="@color/colorAzulEscuro"
        android:textStyle="bold"
        android:layout_marginLeft="95dp"
        android:background="@drawable/botao"
        android:layout_marginTop="20dp"
        android:onClick="LocaisRisco"
        android:textSize="20dp" />


</LinearLayout>

